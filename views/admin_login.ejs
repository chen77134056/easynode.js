
<!--未登录前页面-->
<!DOCTYPE html>
<html>
  <head>

      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <title><%= title %></title>
      <!-- Tell the browser to be responsive to screen width -->
      <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
      <!-- Bootstrap 3.3.6 -->
      <link rel="stylesheet" href="/AdminLTE-2.3.7/bootstrap/css/bootstrap.min.css">
      <!-- Font Awesome -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
      <!-- Ionicons -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
      <!-- Theme style -->
      <link rel="stylesheet" href="/AdminLTE-2.3.7/dist/css/AdminLTE.min.css">
      <!-- iCheck -->
      <link rel="stylesheet" href="/AdminLTE-2.3.7/plugins/iCheck/square/blue.css">

      <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
      <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->


  </head>











  <body class="hold-transition login-page">





    <div class="login-box">
        <div class="login-logo">
            <a href="/"><b>随身笔记</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">后台管理</p>


                <div class="form-group has-feedback">
                    <input id="manager" type="text" class="form-control" placeholder="账号">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input id="password" type="password" class="form-control" placeholder="密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="row" style="position: relative;">
                    <div class="col-xs-8">
                        <div class="form-group has-feedback">
                            <input id="code_num" class="form-control" type="text" placeholder="验证码" data-options="required:true">
                            <span class="glyphicon glyphicon-barcode form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <img id="code_img" style="position: absolute;right: 30px;top:2px;" src="/admin/code_img" width="90" height="30" onclick="this.src='/admin/code_img?'+Math.random();">

                    </div>
                    <p id="message_info_error" style="position: absolute;width: 100%;left: 16px;bottom: -18px;color: darkred;display: none;">登陆失败</p>
                </div>



                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <a id="btn" class="btn btn-primary btn-block btn-flat">登陆</a>
                    </div>
                    <!-- /.col -->
                </div>


        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->






    <!-- jQuery 2.2.3 -->
    <script src="/AdminLTE-2.3.7/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="../javascripts/jquery.cookie.js"></script>




    <!-- Bootstrap 3.3.6 -->
    <script src="/AdminLTE-2.3.7/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="/AdminLTE-2.3.7/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });




        });
    </script>

    <script type="text/javascript" src="/easyui/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="/plupload/lib/plupload/plupload.full.min.js"></script>
    <script type="text/javascript" src="/javascripts/index.js"></script>
    <script>
        $('.icon-reload').click(function () {
            $('#code_img')[0].src='/admin/code_img?'+Math.random();

        });
    </script>


  </body>

</html>
