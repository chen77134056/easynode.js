<script>
    $(function () {
          var str_url=window.location.href;

          $('.sidebar-menu li li').each(function (index,dom) {

              if(new RegExp($(dom).find('a').attr('href'),'i').test(str_url) ){
                   $(this).find('a').css({color:'#fff'})
                   $(this).parents('li').addClass('active');
              }

          });


        $('.sidebar-menu>li:not(:has(ul))').each(function (index,dom) {

            var str=str_url.split('/')[str_url.split('/').length-1];

            if(  $(dom).find('a').attr('href')==str ){
                $(dom).addClass('active');
                $(dom).find('a').css({color:'#fff'});
            }


        })
    });
</script>
