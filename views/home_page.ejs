<div id="page_div">


    <ul>


        <span>
            <% if( is_home() ){ %>
            <a href="/page/1">首页</a>
            <% }else{ %>
            <a href="1">首页</a>
            <% } %>
        </span>

        <%if(currentpage==1){%>
        <span>
            <% if( is_home() ){ %>
            <a href="/page/1">上一页</a>
            <% }else{ %>
            <a href="1">上一页</a>
            <% } %>
        </span>
        <%}else{%>

                <% if( is_home() ){ %>
                  <span><a href="/page/<%= prevpage %>">上一页</a></span>
                <% }else{ %>
                  <span><a href="<%= prevpage %>">上一页</a></span>
                <% } %>
        <%}%>




        <%if(pagenum_total<=5){%>
        <% for(var i=1;i<=pagenum_total;i++){ %>
        <span>

            <% if( is_home() ){ %>
            <a href="/page/<%= i %>"><%= i %></a>
            <% }else{ %>
            <a href="<%= i %>"><%= i %></a>
            <% } %>
        </span>
        <% } %>
        <%}else{%>
        <%if(currentpage<=3){%>
        <% for(var i=1;i<=4;i++){ %>
        <% if(currentpage==i){ %>
        <span>
            <% if( is_home() ){ %>
            <a class="hover" href="/page/<%= i %>"><%= i %></a>
            <% }else{ %>
            <a class="hover" href="<%= i %>"><%= i %></a>
            <% } %>
        </span>
        <% }else{ %>
        <span>
            <% if( is_home() ){ %>
            <a href="/page/<%= i %>"><%= i %></a>
            <% }else{ %>
            <a href="<%= i %>"><%= i %></a>
            <% } %>
        </span>
        <% } %>
        <% } %>
        <span><a>...</a></span>
        <% }%>

        <%if(currentpage-3>1 && currentpage+2<pagenum_total || currentpage==4){%>
        <span><a>...</a></span>
        <% for(var i=currentpage-1;i<=currentpage+1;i++){ %>
           <% if(currentpage==i){ %>
               <span>
                   <% if( is_home() ){ %>
                   <a class="hover" href="/page/<%= i %>"><%= i %></a>
                   <% }else{ %>
                   <a class="hover" href="<%= i %>"><%= i %></a>
                   <% } %>

               </span>
           <% }else{ %>
               <span>
                   <% if( is_home() ){ %>
                   <a href="/page/<%= i %>"><%= i %></a>
                   <% }else{ %>
                   <a href="<%= i %>"><%= i %></a>
                   <% } %>

               </span>
           <% } %>
        <% } %>
        <span><a>...</a></span>
        <%}%>


        <%if(currentpage<=pagenum_total && pagenum_total-2<=currentpage){%>
        <span><a>...</a></span>
        <%for(var i=pagenum_total-3;i<=pagenum_total;i++){%>
        <% if(currentpage==i){ %>
        <span>
            <% if( is_home() ){ %>
            <a class="hover" href="/page/<%= i %>"><%= i %></a>
            <% }else{ %>
            <a class="hover" href="<%= i %>"><%= i %></a>
            <% } %>

        </span>
        <% }else{ %>
        <span>
            <% if( is_home() ){ %>
            <a href="/page/<%= i %>"><%= i %></a>
            <% }else{ %>
            <a href="<%= i %>"><%= i %></a>
            <% } %>

        </span>
        <% } %>
        <%}%>
        <%}%>
        <%}%>






        <%if( is_home() ){%>

            <% if( pagenum_total==currentpage ){ %>
               <span><a href="/page/<%= pagenum_total %>">下一页</a></span>
            <%}else{%>
               <span><a href="/page/<%= nextpage %>">下一页</a></span>
            <%}%>

               <span><a href="/page/<%= pagenum_total %>">尾页</a></span>
        <%}else{%>

            <% if( pagenum_total==currentpage ){ %>
               <span><a href="<%= pagenum_total %>">下一页</a></span>
            <%}else{%>
               <span><a href="<%= nextpage %>">下一页</a></span>
            <%}%>

               <span><a href="<%= pagenum_total %>">尾页</a></span>
            <%}%>

        <span><a>当前页：<%= currentpage %>页</a></span>
        <span><a>总共：<%= pagenum_total %>页</a></span>
    </ul>
</div>