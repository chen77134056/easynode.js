    // ------- 配置上传的初始化事件 -------
    function uploadInit () {
        // this 即 editor 对象
        var editor2 = this;
        // 编辑器中，触发选择图片的按钮的id
        var btnId = editor2.customUploadBtnId;
        // 编辑器中，触发选择图片的按钮的父元素的id
        var containerId = editor2.customUploadContainerId;

        //实例化一个上传对象
        var uploader = new plupload.Uploader({
            browse_button: btnId,  // 选择文件的按钮的id
            url: '/admin/upload',  // 服务器端的上传地址
            flash_swf_url: '/plupload/lib/plupload/Moxie.swf',
            sliverlight_xap_url: '/plupload/lib/plupload/Moxie.xap',
            filters: {
                mime_types: [
