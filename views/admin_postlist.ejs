                    editor2.$txt.append('<img src="'+ window.location.protocol+ '//'+ window.location.host+'/images/' + value + '" style="max-width:100%;"/>');
                   // $('#media_list').datagrid('reload');
                });
            } catch (ex) {
                // 此处可不写代码
            } finally {
                //清空url数组
                urls = [];

                // 隐藏进度条
                editor2.hideUploadProgress();
            }
        });

        // 上传进度条
        uploader.bind('UploadProgress', function (uploader, file) {
            // 显示进度条
            editor2.showUploadProgress(file.percent);
        });
    }


    // ------- 创建编辑器 -------
    var editor2 = new wangEditor('div2');
    editor2.config.customUpload = true;  // 配置自定义上传的开关
    editor2.config.customUploadInit = uploadInit;  // 配置上传事件，uploadInit方法已经在上面定义了
    editor2.create();











